@model CountryModel;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <section class="h-100 bg-info">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-4 d-none d-xl-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img4.webp"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />

                            </div>

                            <div class="col-xl-8 d-none d-xl-block ">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.TextBoxFor(model => model.Vid, new{@class="form-control form-control-lg"})
                                                @Html.LabelFor(model => model.Vid, new{@class="form-label"})
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.TextBoxFor(model => model.Vname, new{@class="form-control form-control-lg"})
                                                @Html.LabelFor(model => model.Vname, new{@class="form-label"})
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.TextBoxFor(model => model.Vdist, new{@class="form-control form-control-lg"})
                                                @Html.LabelFor(model => model.Vdist, new{@class="form-label"})
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div class="form-outline">
                                                @Html.TextBoxFor(model => model.PinCode, new{@class="form-control form-control-lg"})
                                                @Html.LabelFor(model => model.PinCode, new{@class="form-label"})
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                        <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>

                                    </div>
                                }
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


</body>
</html>
